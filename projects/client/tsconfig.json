{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": ["es6", "dom"],
    "jsx": "react",
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": [
    "../node_modules",
    "**/*.spec.ts"
  ]
}
